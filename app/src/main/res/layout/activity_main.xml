<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hemanth.s2assign2.MainActivity"
    >


    <Button
        android:text="CLEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"

        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:text="COMPUTE" />

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:orientation="vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >
        <EditText

            android:layout_weight="4.24"
            android:layout_width="180dp"
            android:layout_height="0dp"
            />
        <EditText


            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <EditText

            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <EditText

            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <EditText

            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <EditText

            android:layout_weight="1"
            android:layout_width="180dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <TextView

        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Months Remaining"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:id="@+id/textView30"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/textView31"
        android:layout_toStartOf="@+id/line1" />

    <TextView

        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Final Card Balance"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:id="@+id/textView29"
        android:layout_above="@+id/textView30"
        android:layout_toStartOf="@+id/line1"
        android:layout_marginBottom="30dp" />

    <TextView

        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Enter Minimum Payment"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:id="@+id/textView28"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/textView29"
        android:layout_toStartOf="@+id/line1" />

    <TextView

        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Enter Yearly Interest Rate (%)"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:id="@+id/textView27"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/textView28"
        android:layout_toStartOf="@+id/line1" />

    <TextView

        android:textSize="15sp"
        android:layout_weight="1"
        android:text="Interest Paid Will Be ($)"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:id="@+id/textView31"
        android:layout_alignBottom="@+id/line1"
        android:layout_toStartOf="@+id/line1"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/textView1"

        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_width="195dp"
        android:layout_height="20dp"
        android:text="Enter Card Balance($)               "
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/line1" />


</RelativeLayout>

